<div class="jumbotron">
<div class="container" style="margin-top:6%;"> 
    <h1 class="text-center">Registrujte se kako biste pristupili blogu</h1>
    <div class="container col-sm-5">
    <form action="/dojam"  method="POST" enctype="multipart/form-data">
        <div class="form-group">
            {{#each errors}}
                <p class="lead">{{msg}}</p>
            {{/each}}
        </div>
        <div class="form-group">
            <h3 class="text-success">
                Registruj se
            </h3>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-6">
                    <small class="text-light">Ime</small>
                    <input type="text" name="firstname" class="form-control" 
                    placeholder="Unesi ime">
                </div>
                <div class="col-sm-6">
                    <small class="text-light">Prezime</small>
                    <input type="text" class="form-control " name="lastname"
                    placeholder="Unesi prezime">
                </div>
            </div>
        </div>
        <div class="form-group">
            <small class="text-light" >Email</small>
            <input type="email" class="form-control " name="email"
            placeholder="Unesi email">

        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-6">
                    <small class="text-light">Password</small>
                    <input type="password" class="form-control " name="password"
                    placeholder="Unesi password">
                </div>
                <div class="col-sm-6">
                    <small class="text-light"> Potvrdi password</small>
                    <input type="password" class="form-control " name="confirmpwd"
                    placeholder="Potvrdi password">
                </div>
            </div>
            
            <small style="color:rgb(222, 202, 135)">Koristite slova brojeve i simbole , najmanje 8 znakova</small>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-6">
                    <small class="text-light"> Spol</small>
                    <input type="text" class="form-control " name="gender"
                    placeholder="Muški / Ženski">
                </div>
                <div class="col-sm-6">
                    <small class="text-light"> Državljanstvo </small>
                    <input type="text" class="form-control " name="ethnicity"
                    placeholder="Bosanskohercegovaško, Američko ..">
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-6">
                    <small class="text-light"> Adresa</small>
                    <input type="text" class="form-control " name="address"
                    placeholder="npr Titova ulica 3 ">
                </div>
                <div class="col-sm-6">
                    <small class="text-light"> Telefon </small>
                    <input type="text" class="form-control " name="phone"
                    placeholder="+387 ... ... ">
                </div>
            </div>

        </div>
        <div class="form-group">
            <small>Dodajte sliku</small>
            <div class="input-group mb-3">
  <div class="input-group-prepend">
    <span class="input-group-text">Upload</span>
  </div>
  <div class="custom-file">
    
    <input type="file" name="file"class="custom-file-input" id="inputGroupFile01">
    <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
  </div>
</div>
        </div>
        <hr>
        <div class="form-group ">
            <button type ="submit"class="btn btn-primary mb-3 btn-block">Potvrdi</button>
            <span class="mt-5"><small class="text-light">Ako ste već registrovani</small><a href="/prijavi_se"
            style="margin-left:7%">Idi na prijavu</a></span>
        </div>
        
    </form>
</div>
