<div class="jumbotron">
<div class="container" id="forma">
  <h1 class="display-4  text-center">Prijavite se kako biste ostavili dojam</h1>
  {{#if success_msg}}

      <p class='lead text-success text-center'>{{success_msg}}</p>
  {{/if}}
  {{#if error}}
      <p class='lead text-danger text-center'>{{error}}</p>
  {{/if}}
</div>
<div class="container col-sm-3" >
  
    <form action="/prijavi_se"  method="POST">
        <div class="form-group">
            
            {{#each errors}}
                <p class="lead">{{msg}}</p>
            {{/each}}
        </div>
        <div class="form-group">
           
            <div class="row ml-auto">
                <h4 class="text-success">
                    Prijavi se
                </h4>
            </div>
            
        </div>
        
        <div class="form-group">
            <small class="text-light" >Email</small>
            <input type="email" class="form-control " name="email"
            placeholder="Unesi email">

        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-6">
                    <small class="text-light">Password</small>
                    <input type="password" class="form-control " name="password"
                    placeholder=" Unesi password">
                </div>
                <div class="col-sm-6">
                    <small class="text-light"> Potvrdi password</small>
                    <input type="password" class="form-control" name="confirmpwd"
                    placeholder="Potvrdi password">
                </div>
            </div>
            
            <small style="color:rgb(222, 202, 135)">Obratite paznju da vam se passwordi slažu</small>
        </div>
        <hr>

        <div class="form-group ">
            <button type ="submit"class="btn btn-primary mb-3 btn-block">Potvrdi</button>
            <span class="mt-5"><small class="text-light">Ako niste registrovani</small><a href="/dojam"
            style="margin-left:4%">Idi na registraciju</a></span>
        </div>
        
    </form>
</div>
</div>